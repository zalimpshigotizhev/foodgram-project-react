version: '3.3'
volumes:
  pg_data:
  static_dir:
  media_dir:

services:
  db:
    image: postgres:13.10
    env_file: .env
    volumes:
      - pg_data:/var/lib/postgresql/data/
  backend:
    image: zalimoka/foodgram_backend
    env_file: .env
    restart: always
    volumes:
      - static_dir:/app/static/
      - media_dir:/app/media/
    depends_on:
      - db

  frontend:
    image: zalimoka/foodgram_backend
    env_file: .env
    volumes:
      - ../frontend/:/app/result_build/
  nginx:
    image: zalimoka/foodgram_infra
    ports:
      - "80:80"
